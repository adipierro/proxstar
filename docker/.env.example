# Core app
PROXSTAR_SECRET_KEY=change-me
PROXSTAR_SERVER_NAME=localhost:8080
PROXSTAR_IP=0.0.0.0
PROXSTAR_PORT=8080

# Database / Redis
PROXSTAR_SQLALCHEMY_DATABASE_URI=postgresql+psycopg2://proxstar:proxstar@db:5432/proxstar
PROXSTAR_REDIS_HOST=redis
PROXSTAR_REDIS_PORT=6379

# OIDC
PROXSTAR_OIDC_ISSUER=https://your-issuer.example.com
PROXSTAR_CLIENT_ID=proxstar
PROXSTAR_CLIENT_SECRET=change-me

# Proxmox
PROXSTAR_PROXMOX_HOSTS=proxmox.example.com
PROXSTAR_PROXMOX_USER=token@pve!proxstar
PROXSTAR_PROXMOX_TOKEN_NAME=proxstar
PROXSTAR_PROXMOX_TOKEN_VALUE=change-me
PROXSTAR_PROXMOX_ISO_STORAGE=nfs-iso
PROXSTAR_PROXMOX_VM_STORAGE=ceph

# SDN
PROXSTAR_SDN_ZONE=proxstar-sdn
PROXSTAR_SDN_ZONE_TYPE=simple
PROXSTAR_SDN_BASE_CIDR=10.100.0.0/16
PROXSTAR_SDN_STUDENT_PREFIX=24

# Session timeouts
PROXSTAR_SESSION_TIMEOUT_HOURS=6
PROXSTAR_SESSION_SHUTDOWN_GRACE_MINUTES=5
PROXSTAR_SESSION_CHECK_INTERVAL_SECONDS=300

# Template cloning (false => linked clones)
PROXSTAR_TEMPLATE_CLONE_FULL=false
